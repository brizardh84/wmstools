header#header
	.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
		.navbar-inner
			.container
				.nav-collapse
					ul.nav
						li(class = title == 'Projects' ? "active" : "")
							a(href='/projects', title="project listing") Projects

						li(class = title == 'Documents' ? "active" : "")
							a(href='/documents', title="document listing") Documents

						li(class = title == 'Contacts' ? "active" : "")
							a(href='/contacts', title="contact listing") Contacts
						li.dropdown(class = title == 'Tasks' ? "active" : "", style = 'cursor : pointer;')
							a.dropdown-toggle(data-toggle="dropdown") Tasks
								b.caret
							ul.dropdown-menu
								li
									a(href="/tasks") Active
								li
									a(href="/tasks/archived") Archived								
					ul.nav.pull-right
						if (req.isAuthenticated())
							li
								a(href="/users/"+req.user.id, title="Profile") Profile
							li
								a(href="/logout", title="logout") Logout
						else
							li
								a(href="/login", title="Login") Login
	if (req.isAuthenticated())
		div#sticker
			div.sticker-header Quick Tools
			div.sticker.stickerproject
				a(href = "/projects/quicknew", data-toggle="modal", data-target="#modalCreation") New Project
			div.sticker.stickercontact
				a(href = "/contacts/quicknew", data-toggle="modal", data-target="#modalCreation") New Contact
			div.sticker.stickertask
				a(href = "/tasks/quicknew", data-toggle="modal", data-target="#modalCreation") New Task
			div.sticker
				a(data-toggle="modal", data-target="#modalCreation") Do Something 
			div.sticker
				a(data-toggle="modal", data-target="#modalCreation") Do Something Else
		div#modalCreation.modal.hide.fade(style = "padding : 20px;")
			= "Do Something"